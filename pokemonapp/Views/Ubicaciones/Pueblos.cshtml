@model List<Pueblo>

<h1>Listar Pueblos</h1>
<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Region</th>
        <th>Operaciones</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>
                @item.Region.Nombre
            </td>
            <td><!--Actualizar-->
                <a href="/ubicaciones/EditarRegion/@item.Id" class="btn btn-secondary">Editar</a>
                <form action="/ubicaciones/BorrarRegion" method="post" class="d-inline-block">
                    <input type="hidden" name="id" value="@item.Id">
                    <button class="btn btn-danger">Borrar</button>
                </form>
            </td>
        </tr>      
    }
    @if(Model.Count ==0){
        <tr>
            <td colspan="4" class="text-center">No se encontraron pueblos</td>
        </tr>
    }
</table>
